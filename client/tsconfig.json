{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "sourceMap": true,
    "inlineSources": true,
    "sourceRoot": "./",
    "baseUrl": "./",
    "paths" : {
      "src/": ["./src/"]
    },
    "incremental": true,
  },
  "exclude": [
    "node_modules",
    "jest.config.js",
  ],
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ]
}
